<div class="container">
		<p>
  <h2><%= @product.title %></h2>
		</p>
<%= image_tag(@product.picture.url, size: "300x250")if @product.picture? %>
		<p>
  <strong>Description:</strong>
  <p><%= @product.description %></p>
   <strong>Composition:</strong>
   <p><%= simple_format(@product.composition) %></p>
    <strong>Usage:</strong>
    <p><%= simple_format(@product.usage) %></p>
     <strong>Duration in days:</strong>
    <p><%= @product.duration %></p>
  <% if user_signed_in? %>
		</p>
		<p><%= link_to 'Edit this Product', edit_product_path(@product),class: "btn btn-xs btn-success" %> |<%= link_to "Delete this Product", product_path(@product), method: :delete,

			data: { confirm: "Are you sure you want to delete this Product?"},

			class: "btn btn-xs btn-danger" %></p>
			<% end %>

		<p><%= link_to 'Back', products_path %></p>
</div>