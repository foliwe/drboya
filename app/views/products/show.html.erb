<div class="container">
		<div class="row">
    <div class="col-md-6">
    <%= image_tag(@product.picture.url(:show))if @product.picture? %>
    </div>  
    <div class="col-md-6">
       <h2><%= @product.title %></h2>
       <strong class="title">Description</strong>
  <p><%= @product.description %></p>

    </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <strong class="title">Composition</strong>
          <p><%= simple_format(@product.composition) %></p>
      </div>
      <div class="col-md-6">
        <strong class="title">Usage</strong>
       <p><%= simple_format(@product.usage) %></p>
      </div>
    </div>
  
   
    
     <strong class="title">Duration in days</strong>
    <p><%= @product.duration %></p>
  <% if user_signed_in? %>
		</p>
		<p><%= link_to 'Edit this Product', edit_product_path(@product),class: "btn btn-xs btn-success" %> |<%= link_to "Delete this Product", product_path(@product), method: :delete,

			data: { confirm: "Are you sure you want to delete this Product?"},

			class: "btn btn-xs btn-danger" %></p>
			<% end %>

		<p><%= link_to 'Back', products_path %></p>
</div>