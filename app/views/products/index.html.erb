<div class="container">
      <h2 class="text-center">All Products</h2>
      <hr>
    <div class="row">
    <% @products.each do |product| %>

        <div class="col-sm-12 col-md-6">
            <h3><%= link_to product.title, product %></h3>
            <p><%= truncate (product.description),length: 90 %></p>
         </div>  
         <% end %>          
    </div>
</div>