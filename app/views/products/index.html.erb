<div class="container">
      <h2 class="text-center">All Products</h2>
      <hr>
    <div class="row">
    <% @products.each do |product| %>

        <div class="col-sm-6 col-md-3">
            <h3><%= link_to product.title, product %></h3>
            <p><%= product.description %></p>
         </div>  
         <% end %>          
    </div>
</div>