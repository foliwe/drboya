<!DOCTYPE html>
<html>
<head>
  <title>Boya</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <%=link_to 'DR NJUALEM', root_path, class: "navbar-brand"%>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%=link_to 'Home', root_path%></li>
        <li><%=link_to 'Herbal Medecine',contents_herbal_path%></li>
        <li><%=link_to 'Patient Area',contents_patient_path%></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Testimonials <span class="caret"></span></a>
          <ul class="dropdown-menu">
           <li><%=link_to 'Testimonials',testimonies_path%></li>
            <% if user_signed_in? %>
            <li><%=link_to 'New Testimony',new_testimony_path%></li>
             <% end %>
          </ul>
        </li>
        <li><%=link_to 'FAQ',contents_faq_path%></li>
        <li><%=link_to 'Contact', new_contact_path%></li>
        <% if user_signed_in? %>
        <li><%=link_to 'New Product', new_product_path %></li>
         <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
       <li class="dropdown">
       <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <span class="caret"></span></a>
       <ul class="dropdown-menu">
         <li> <%= link_to 'Edit Profile', edit_user_registration_path%></li>
         <li> <%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
         <% end %>
        <li><%= link_to('Login', new_user_session_path) %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
